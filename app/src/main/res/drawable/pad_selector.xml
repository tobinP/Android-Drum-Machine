<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <corners android:radius="14dp" />

            <gradient
                android:angle="45"
                android:startColor="#d70e0e"
                android:centerColor="#42515C"
                android:endColor="#d70e0e"
                android:centerX="30%"
                android:type="linear" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <stroke
                android:width="1dp"
                android:color="#696969" />
        </shape>

    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <corners android:radius="14dp" />

            <gradient
                android:angle="45"
                android:startColor="#000000"
                android:centerColor="#42515C"
                android:endColor="#000000"
                android:centerX="30%"
                android:type="linear" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <stroke
                android:width="1dp"
                android:color="#696969" />
        </shape>
    </item>

</selector>